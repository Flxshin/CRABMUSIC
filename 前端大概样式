    <script>
        // 页面导航功能
        document.addEventListener('DOMContentLoaded', function() {
            // 页面切换功能
            const navLinks = document.querySelectorAll('.nav-link');
            const showLoginLinks = document.querySelectorAll('.show-login');
            const showRegisterLinks = document.querySelectorAll('.show-register');
            const pages = document.querySelectorAll('.page-container');
            
            function showPage(pageId) {
                pages.forEach(page => {
                    page.classList.remove('active');
                    if (page.id === pageId) {
                        page.classList.add('active');
                    }
                });
                
                // 更新导航激活状态
                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-page') === pageId.split('-')[0]) {
                        link.classList.add('active');
                    }
                });
            }
            
            // 导航链接点击事件
            navLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const pageId = this.getAttribute('data-page') + '-page';
                    showPage(pageId);
                });
            });
            
            // 显示登录页面
            showLoginLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    showPage('login-page');
                });
            });
            
            // 显示注册页面
            showRegisterLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    showPage('register-page');
                });
            });
            
            // 管理员选项卡功能
            const adminTabs = document.querySelectorAll('[data-tab]');
            const adminTabContents = document.querySelectorAll('.admin-tab');
            
            adminTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // 更新选项卡激活状态
                    adminTabs.forEach(t => t.classList.remove('active'));
                    this.classList.add('active');
                    
                    // 显示对应内容
                    const target = this.getAttribute('data-tab') + '-tab';
                    adminTabContents.forEach(content => {
                        content.classList.remove('active');
                        if (content.id === target) {
                            content.classList.add('active');
                        }
                    });
                });
            });
            
            // 签到功能
            const checkinBtn = document.querySelector('.checkin-btn');
            if (checkinBtn) {
                checkinBtn.addEventListener('click', function() {
                    if (this.textContent === '立即签到') {
                        this.textContent = '今日已签到';
                        this.classList.remove('btn-success');
                        this.classList.add('btn-outline');
                        this.disabled = true;
                        
                        // 更新连续签到天数
                        const streakCount = document.querySelector('.streak-count');
                        streakCount.textContent = parseInt(streakCount.textContent) + 1;
                        
                        // 显示签到成功消息
                        alert('签到成功！获得10积分');
                    }
                });
            }
            
            // 邀请码生成功能
            const generateBtn = document.getElementById('generate-invites');
            if (generateBtn) {
                generateBtn.addEventListener('click', function() {
                    alert('已生成10个新的邀请码！');
                });
            }
            
            // 表单提交处理
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    if (this.id === 'register-form') {
                        // 密码验证
                        const password = document.getElementById('password').value;
                        const confirmPassword = document.getElementById('confirm-password').value;
                        
                        if (password !== confirmPassword) {
                            alert('两次输入的密码不一致！');
                            return;
                        }
                        
                        // 邀请码验证
                        const inviteCode = document.getElementById('invite-code').value;
                        if (!inviteCode) {
                            alert('邀请码不能为空！');
                            return;
                        }
                        
                        alert('注册成功！即将跳转到登录页面');
                        showPage('login-page');
                    }
                    else if (this.id === 'login-form') {
                        alert('登录成功！即将跳转到控制面板');
                        showPage('dashboard-page');
                    }
                    else {
                        alert('表单已提交！在实际应用中，这里会发送数据到服务器。');
                    }
                });
            });
        });
    </script>
</body>
</html>
